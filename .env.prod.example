# Production Environment Variables Template
# Copy this file to .env.prod and fill in the actual values
# NEVER commit .env.prod to version control!

# Docker Hub Configuration
DOCKERHUB_USERNAME=your-dockerhub-username

# Database Configuration
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=fastapi_db

# JWT Configuration (Generate strong keys: openssl rand -hex 32)
JWT_SECRET_KEY=generate-a-secure-random-key-at-least-32-chars
JWT_REFRESH_SECRET_KEY=generate-another-secure-random-key-at-least-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Security
BCRYPT_ROUNDS=12

# Domain Configuration
DOMAIN_NAME=your-domain.com
